{
  "$schema": "https://opencode.ai/config.json",
  "server": {
    "port": 39393,
    "hostname": "127.0.0.1",
    "cors": [
      "https://code.ylxdzsw.com"
    ]
  },
  "model": "volcengine-coding/doubao-seed-2.0-code",
  "small_model": "github-copilot/gpt-5-mini",
  "default_agent": "plan",
  "share": "disabled",
  "provider": {
    "volcengine-coding": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Volcengine CodingPlan",
      "options": {
        "baseURL": "https://ark.cn-beijing.volces.com/api/coding/v3",
        "apiKey": "{env:VOLCENGINE_API_KEY}"
      },
      "models": {
        "doubao-seed-2.0-code": {
          "name": "Seed Code 2.0",
          "modalities": {
            "input": [
              "text",
              "image",
              "video"
            ],
            "output": [
              "text"
            ]
          },
          "limit": {
            "context": 256000,
            "output": 128000
          }
        }
      }
    }
  },
  "permission": {
    "*": "allow",
    "doom_loop": "ask",
    "external_directory": "ask",
    "plan*": "deny"
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  },
  "experimental": {
    "batch_tool": true
  }
}
